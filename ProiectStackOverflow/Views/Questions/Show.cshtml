@model ProiectStackOverflow.Models.Question


<div class="card">

    <div class="card-body">

        <h3 class="card-title alert-secondary py-3 px-3 rounded-2" href="/Questions/Show/@Model.Id">@Model.Title</h3>

        <div class="card-text">@Html.Raw(Model.Content)</div>

        <div class="d-flex justify-content-between flex-row mt-5">

            <div>@Model.Tag.TagName</div>

            <span class="alert-info">@Model.Date</span>

        </div>

    </div>
    <br/>

    <hr/>

    @if (Model.UserId == ViewBag.UserCurent || ViewBag.Admin)
    {
        <div class="d-flex flex-row justify-content-between">

            <a class="btn alert-info" href="/Questions/Edit/@Model.Id">Edit</a>

            <form method="post" asp-controller="Questions" asp-action="Delete" asp-route-id="@Model.Id">

                <button class="btn alert-danger" type="submit">Delete</button>

            </form>

        </div>
    }

</div>

<br/>
<br/>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h1>Comments</h1>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

@foreach (var comm in Model.Comments)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-8">

                <div>

                    <p>@comm.Content</p>
                    <small>@comm.Date</small>
                    <strong>
                        <i class="bi bi-person"></i><a href="@Url.Action("Index", "Profile", new { id = comm.UserId })">@comm.User.UserName</a>
                    </strong>

                </div>
                <br>

                @if (comm.UserId == ViewBag.UserCurent || ViewBag.Admin)
                {
                    <div class="d-flex gap-3">

                        <div>

                            <a class="btn alert-primary" href="/Comments/Edit/@comm.Id"><i class="bi bi-pencil-square"></i>Edit</a>

                        </div>

                        <div>

                            <form method="post" asp-controller="Comments" asp-action="Delete" asp-route-id="@comm.Id">

                                <button class="btn alert-danger" type="submit"><i class="bi bi-trash"></i>Delete</button>

                            </form>

                        </div>

                    </div>
                }

                <br/>

            </div>

            <div class="col-md-2"></div>

        </div>

    </div>
}

<div class="container">

    <div class="row">

        <div class="col-md-2"></div>

        <div class="col-md-8">

            <div class="card">

                <form method="post" asp-controller="Questions" asp-action="ShowComm">
                    <div class="card-body">
                        <input type="hidden" name="QuestionId" value="@Model.Id"/>
                        <label>Comment</label>
                        <br/>
                        <textarea class="form-control" name="Content"></textarea>
                        <span asp-validation-for="Comment.Content" class="text-danger"></span>
                        <br/><br/>
                        <button class="btn alert-primary " type="submit">
                            Add comment
                        </button>
                    </div>
                </form>

            </div>

        </div>

        <div class="col-md-2"></div>

    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h1>Answers</h1>

            @{
                string sortOrderDate = ViewBag.SortOrder == "date_asc" ? "▲" : "▼";
            }


            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle me-2 mb-4" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Sort by
                </button>
                <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Show", new { id = Model.Id, sortOrder = "date_asc" })">
                            Oldest @(ViewBag.SortOrder == "date_asc" ? "▲" : "")
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Show", new { id = Model.Id, sortOrder = "date_desc" })">Newest @(ViewBag.SortOrder == "date_desc" ? "▼" : "")</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>


@foreach (var ans in Model.Answers)
{
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>

            <div class="col-md-10">

                <div>

                    <p>@ans.Content</p>
                    <small>@ans.Date</small>
                    <strong>
                        <i class="bi bi-person"></i><a href="@Url.Action("Index", "Profile", new { id = ans.UserId })">@ans.User.UserName</a>
                    </strong>

                </div>
                <br>

                @if (ans.UserId == ViewBag.UserCurent || ViewBag.Admin)
                {
                    <div class="d-flex gap-3">

                        <div>

                            <a class="btn alert-primary" href="/Answers/Edit/@ans.Id"><i class="bi bi-pencil-square"></i>Edit</a>

                        </div>

                        <div>

                            <form method="post" asp-controller="Answers" asp-action="Delete" asp-route-id="@ans.Id">

                                <button class="btn alert-danger" type="submit"><i class="bi bi-trash"></i>Delete</button>

                            </form>

                        </div>

                    </div>
                }

                <br/>

            </div>

            <div class="col-md-1"></div>

        </div>

    </div>
}

<div class="container">

    <div class="row">

        <div class="col-md-1"></div>

        <div class="col-md-10">

            <div class="card">

                <form method="post" asp-controller="Questions" asp-action="ShowAns">
                    <div class="card-body">
                        <input type="hidden" name="QuestionId" value="@Model.Id"/>
                        <label>Answer</label>
                        <br/>
                        <textarea class="form-control" name="Content"></textarea>
                        <span asp-validation-for="Answer.Content" class="text-danger"></span>
                        <br/><br/>
                        <button class="btn alert-primary " type="submit">
                            Add answer
                        </button>
                    </div>
                </form>

            </div>

        </div>

        <div class="col-md-1"></div>

    </div>

</div>