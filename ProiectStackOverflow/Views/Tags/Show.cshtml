@model ProiectStackOverflow.Models.Tag

@{
    ViewBag.Title = "Show Tag";
}

<div class="container">

    <h3>[@Model.TagName]</h3>
    <p>@Model.Description</p>

    <div class="d-inline-flex">
        <a class="btn alert-success m-3" asp-controller="Tags" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="bi bi-pencil-square"></i>Edit
        </a>

        <form method="post" asp-controller="Tags" asp-action="Delete"
              asp-route-id="@Model.Id">

            <button class="btn alert-danger m-3" type="submit">
                <i class="bi bi-trash"></i>Delete
            </button>

        </form>
    </div>

</div>

