@{
	ViewBag.Title = "Tags";
}

<h3 class="text">Tags</h3>
<p>
	A tag is a keyword or label that categorizes your question with other, similar questions.
	<br />Using the right tags makes it easier for others to find and answer your question.
</p>
<br />

<div class="row">
	@foreach (var tag in ViewBag.Tags)
	{
		<div class="col-sm-3 border mb-3 m-3">
			<a class="btn alert-secondary m-2" href="/Questions/Index/@tag.Id">@tag.TagName</a>
			<div class="description">@tag.Description</div>
			<br />
			@if(ViewBag.Admin)
			{
				<a class="btn alert-warning" asp-controller="Tags" asp-action="Show" asp-route-id="@tag.Id">Show</a>
				<a class="btn alert-info" asp-controller="Tags" asp-action="Edit" asp-route-id="@tag.Id">Edit</a>
			}
			<br />
		</div>
	}
</div>

<br />
<br />
<br />

<div class="d-flex justify-content-around">
	<a class="btn alert-warning" href="/Questions/New">Ask a question!</a>
</div>
