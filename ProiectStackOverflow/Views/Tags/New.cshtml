@model ProiectStackOverflow.Models.Tag

@{
    ViewBag.Title = "Add tag";
}

<h2>Add tag</h2>

<form asp-action="New" asp-controller="Tags" method="post">

    <div class="form-group m-3">
        <label asp-for="TagName" class="form-label">TagName</label>
       
        <input asp-for="TagName" class="form-control" />
        <span asp-validation-for="TagName" class="text-danger"></span>
    </div>

    <div class="form-group m-3">
        <label asp-for="Description" class="form-label">Content</label>
      
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    
    </div>

    <button class="btn alert-secondary m-3" type="submit">Add tag</button>
</form>


