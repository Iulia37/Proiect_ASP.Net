<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProiectStackOverflow</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProiectStackOverflow.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote-lite.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand font-logo" asp-area="" asp-controller="Questions" asp-action="HomeIndex">ProiectStackOverflow</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div>
                        <form method="GET" action="/Questions/HomeIndex">
                            <div class="input-group m-3">
                                <input type="text" class="form-control"
                                       placeholder="Search..." name="search"
                                       value="@ViewBag.SearchString">
                                <button class="btn btn-outline-secondary"
                                        type="submit">
                                    Search
                                </button>
                            </div>
                        </form>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="row">
        <div class="col-sm-2 border-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark m-3" asp-area="" asp-controller="Questions" asp-action="HomeIndex">
                        <i class="bi bi-house-door-fill"></i>Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark m-3" asp-area="" asp-controller="Tags" asp-action="Index">
                        <i class="bi bi-tags-fill"></i>Tags
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark m-3" asp-area="" asp-controller="Questions" asp-action="New">
                            <i class="bi bi-patch-question"></i>Ask question
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark m-3" asp-area="" asp-controller="Users" asp-action="Index">
                            <i class="bi bi-people-fill"></i>Users
                        </a>
                    </li>
                }
                @if (User.IsInRole("User"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark m-3" asp-area="" asp-controller="Questions" asp-action="New">
                            <i class="bi bi-patch-question"></i>Ask question
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="col-sm-10">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ProiectStackOverflow - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote-lite.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/SummerNote.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
